package io.johnvincent.gomoku.library.rates;

import com.fasterxml.jackson.annotation.JsonPropertyOrder;

@JsonPropertyOrder({ "key", "before", "actual", "after" })
public class ActualRatesItem extends FlagsItem {
	
	final private String key;
	final private int before;
	final private int actual;
	final private int after;

	public ActualRatesItem (final String key, final int before, final int actual, final int after, final int rate) {
		super(key, rate);
		
		assert before >= 0;
		assert actual >= 0;
		assert after >= 0;

		this.key = key;
		this.before = before;
		this.actual = actual;
		this.after = after;
	}

	public ActualRatesItem (final String key, final int before, final int actual, final int after, final int rate, 
			final PlayerFlagsItem currentPlayerFlagsItem) {
		super(key, rate, currentPlayerFlagsItem);
		
		assert before >= 0;
		assert actual >= 0;
		assert after >= 0;

		this.key = key;
		this.before = before;
		this.actual = actual;
		this.after = after;
	}

	public ActualRatesItem (final String key, final int before, final int actual, final int after, final int rate, 
			final PlayerFlagsItem currentPlayerFlagsItem, final PlayerFlagsItem otherPlayerFlagsItem) {
		super(key, rate, currentPlayerFlagsItem, otherPlayerFlagsItem);
		
		assert before >= 0;
		assert actual >= 0;
		assert after >= 0;

		this.key = key;
		this.before = before;
		this.actual = actual;
		this.after = after;
	}
	
	public String getKey() {return key;}
	public int getBefore() {return before;}
	public int getActual() {return actual;}
	public int getAfter() {return after;}
	
	public String toString() {
		return "("+getKey()+","+getBefore()+","+getActual()+","+getAfter()+","+super.toString();
	}
}
